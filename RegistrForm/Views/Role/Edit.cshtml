@using RegistrForm.Models;
@model RegistrForm.Models.Role
@{
    Layout = null;
}

<style>
    td {
        padding-left: 20px;
    }

    .field-validation-error {
        color: #f00;
    }

    .field-validation-valid {
        display: none;
    }

    .input-validation-error {
        border: 1px solid #f00;
        background-color: #fee;
    }

    .validation-summary-errors {
        font-weight: bold;
        color: #f00;
    }

    .validation-summary-valid {
        display: none;
    }

    label {
        display: inline-block;
        width: 100px;
        font-weight: bold;
        margin: 5px;
    }

    form label {
        float: left;
    }

    input.text-box {
        float: left;
        margin: 5px;
    }

    button[type=submit] {
        margin-top: 5px;
        float: left;
        clear: left;
    }

    form div {
        clear: both;
    }
</style>

@using (Html.BeginForm())
{
    <fieldset>
        <legend>Edit Role</legend>

        <table>
            <tr>
                <td>
                    <label>Role`s Name:</label>
                </td>
                <td>
                    @Html.TextBoxFor(u => u.Name)
                </td>
                <td>
                    @Html.ValidationMessageFor(u => u.Name)
                </td>
            </tr>
        </table>

        <br />
        <input type="submit" />
    </fieldset>
}
